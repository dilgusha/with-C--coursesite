
@{
    ViewBag.Title = "InfoAdmin";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2 style="color:#000; font-weight:600;margin-bottom:50px;">
    Info
</h2>
<div class="ABOUT">

    <form action="~/Admin/InfoAdmin" method="post" enctype="multipart/form-data">
        <div class="form-group col-md-3">
            <label>InfoPhone</label>
            <input name="InfoPhone" value="" type="text" class="form-control" />
        </div>
        <div class="form-group col-md-3">
            <label>InfoEmail</label>
            <input name="InfoEmail" value="" type="text" class="form-control" />
        </div>
        <div class="form-group col-md-3">
            <label>InfoLocation</label>
            <textarea required autocomplete="on" style="width: 230px; height: 100px;" runat="server" class="form-control" rows="3" id="text" name="InfoLocation"></textarea>
        </div>
        <div class="form-group col-md-3">
            <label>InfoPlace</label>
            <input name="InfoPlace" value="" type="text" class="form-control" />
        </div>
        <div class="form-group col-md-3">
            <label>InfoFace</label>
            <input name="InfoFace" value="" type="text" class="form-control" />
        </div>
        <div class="form-group col-md-3">
            <label>InfoTwitter</label>
            <input name="InfoTwitter" value="" type="text" class="form-control" />
        </div>
        <div class="form-group col-md-3">
            <label>infoLink</label>
            <input name="infoLink" value="" type="text" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success" style="margin-top:20px;">Change Button</button>
    </form>
</div>
<style>
    .ABOUT input {
        width: 230px;
        height: 100px;
    }
</style>

